<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>
    <style name="login_textfield">
        <item name="android:background">@drawable/textfield_shape</item>
        <item name="android:ems">10</item>
    </style>
    <style name="countdown_style">
        <item name="android:width">70dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="countdown_time_style">
        <item name="android:width">70dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme2" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>